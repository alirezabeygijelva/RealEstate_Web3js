@model MyRealEstate.DomainClasses.Estate.EstateContract
@using Microsoft.AspNetCore.Identity
@using MyRealEstate.Web.Models;
@inject UserManager<ApplicationUser> _UserManager

@{
    ViewData["Title"] = "Accept";
}

<h2>Confirm Contract</h2>

<h3>Are You Sure For Confirm?</h3>
