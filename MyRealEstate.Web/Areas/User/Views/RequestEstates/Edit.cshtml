@model MyRealEstate.DomainClasses.Estate.RequestEstate

@{
    ViewData["Title"] = "Edit Request ";
}

<h2>Edit Request</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RequestEstateId" />
            <input type="hidden" asp-for="SaveUserId" />
            <input type="hidden" asp-for="EstateId" />
            <input type="hidden" asp-for="SaveTime" />
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea rows="10" asp-for="Note" class="form-control"></textarea> />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.EstateId"> Back To List </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
