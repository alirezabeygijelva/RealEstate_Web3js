
@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-md-5">
            <div class="quick-search">
                <div class="row">
                    <form role="form">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <div class="form-group">
                                <label for="country">Country</label>
                                <select class="form-control">
                                    <option>USA</option>
                                    <option>UAE</option>
                                    <option>Jopen</option>
                                    <option>China </option>
                                    <option>Germany</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="bedroom">Room </label>
                                <select class="form-control">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                </select>
                            </div>
                        </div>
                        <!-- break -->
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <div class="form-group">
                                <label for="location">Location</label>
                                <select class="form-control">
                                    <option>Tasland</option>
                                    <option>Pogovo</option>
                                    <option>MidelState</option>
                                    <option>Bosam</option>
                                    <option>China Town</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="bathroom">BathRoom</label>
                                <select class="form-control">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                </select>
                            </div>
                        </div>
                        <!-- break -->
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <div class="form-group">
                                <label for="status">Status</label>
                                <select class="form-control">
                                    <option>For Sell </option>
                                    <option>For Rent </option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="minprice"> Price</label>
                                <select class="form-control">
                                    <option>$4,200</option>
                                    <option>$6,700</option>
                                    <option>$8,150</option>
                                    <option>$11,110</option>
                                </select>
                            </div>
                        </div>
                        <!-- break -->
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <div class="form-group">
                                <label for="type">Type</label>
                                <select class="form-control">
                                    <option>Apartement</option>
                                    <option>Comertial</option>
                                    
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="maxprice">Max Price </label>
                                <select class="form-control">
                                    <option>$8,200</option>
                                    <option>$11,700</option>
                                    <option>$14,150</option>
                                    <option>$21,110</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12"><input type="submit" name="submit" value="Search" class="btn btn-primary btn-lg btn-block"></div>

                    </form>
                </div>
            </div>
        </div>
    </div>